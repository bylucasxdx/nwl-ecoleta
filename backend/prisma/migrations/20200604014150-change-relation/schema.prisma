datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Points {
  id        Int      @default(autoincrement()) @id
  image     String
  name      String
  email     String
  whatsapp  String
  latitude  Float
  longitude Float
  city      String
  uf        String
  items     Items[]
}

model Items {
  id        Int      @default(autoincrement()) @id
  image     String
  title     String
  points    Points[]
}

